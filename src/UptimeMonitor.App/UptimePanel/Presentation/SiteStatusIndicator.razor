<div class="flex items-center gap-2 mt-2">
@if (IsUp)
{
    <span class="bg-green-500 rounded-full w-3 h-3 block"></span>
    <span class="text-green-500 font-medium">Online</span>
}
else
{
    <span class="bg-red-500 rounded-full w-3 h-3 block"></span>
    <span class="text-red-500 font-medium">Offline</span>
}
</div>

@code 
{
    [Parameter]
    public bool IsUp { get; set; }
    
}